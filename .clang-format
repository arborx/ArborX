BasedOnStyle:  LLVM
---
AlwaysBreakTemplateDeclarations: true
BreakBeforeBraces: Custom
BraceWrapping:
  AfterCaseLabel: true
  AfterClass: true
  AfterControlStatement: Always
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterObjCDeclaration: true
  AfterStruct: true
  AfterUnion: true
  AfterExternBlock: true
  BeforeCatch: true
  BeforeElse: true
  BeforeLambdaBody: false
  BeforeWhile: false
  IndentBraces: false
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false
BreakConstructorInitializersBeforeComma: true
IncludeBlocks: Regroup
Language: Cpp
IncludeCategories:
# arborx first
  - Regex: "ArborX_Config.hpp"
    Priority: -1
  - Regex: "ArborX*"
    Priority: 1
# Then Kokkos
  - Regex: "Kokkos*"
    Priority: 2
# Then boost
  - Regex: "boost*"
    Priority: 3
# Finally the standard library
  - Regex: "<[a-z_]+>"
    Priority: 10
QualifierAlignment: Right
